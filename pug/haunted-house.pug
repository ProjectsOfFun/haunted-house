doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		title Haunted House: Remastered - A Text Adventure by Robert Wm. Gomez

		// Various browser favicons
		link(rel="icon", href="images/Haunted-House.ico")
		link(rel="apple-touch-icon", href="images/apple-touch-icon-iphone-60x60.png")
		link(rel="apple-touch-icon", sizes="60x60", href="images/apple-touch-icon-ipad-76x76.png")
		link(rel="apple-touch-icon", sizes="114x114", href="images/apple-touch-icon-iphone-retina-120x120.png")
		link(rel="apple-touch-icon", sizes="144x144", href="images/apple-touch-icon-ipad-retina-152x152.png")

		// Facebook meta info because you know you want to share this
		meta(property="og:image", content="http://projects.robertgomez.org/haunted-house/images/share-image.jpg")
		meta(property="og:title", content="Haunted House: Remastered by Robert Wm. Gomez")
		meta(property="og:url", content="http://projects.robertgomez.org/haunted-house/haunted-house.html")
		meta(property="og:site_name", content="Robert Wm. Gomez Web Projects")

		// Load the page styles and Google computer font
		link(href="https://fonts.googleapis.com/css?family=Press+Start+2P&display=swap", rel="stylesheet")
		link(href="css/hh-screen.css", rel="stylesheet")

	body
		#hh-container
			#hh-display
				#hh-output
				#hh-input
					form#hh-input-form(onSubmit="return false")
						br
						label What will you do now:
						br
						span.prompt &gt;
						input#hh-userInput(type="text", name="userInput", autocomplete="off", placeholder="Type your command here...")
				button#hh-reload.is-hidden [ Click to Restart ]

			#hh-display-overlay
				| HAUNTED HOUSE: REMASTERED<br>
				span.hh-divider ---------------------------------------------<br><br>
				#hh-output-overlay
				br
				button#hh-continue.is-first-screen [ SPACE to Start ]

			#hh-help
				| Type 'HELP' for instructions. (v2.11)
				#hh-screensize

					button#btnBigger [ Screen + ]
					| &nbsp;
					button#btnSmaller [ Screen - ]
					| &nbsp;
					button#btnFonts [ Font ]

		script(src="js/Haunted-House-dist.js")